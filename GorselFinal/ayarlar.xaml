<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GorselFinal.ayarlar"
             Title="ayarlar">

    <StackLayout Padding="20">
        <Grid ColumnDefinitions="*,*" Padding="20">
            <Label Grid.Column="0" Text="Dark Mode" FontSize="20" HorizontalOptions="Start"/>
            <Switch Grid.Column="1" x:Name="themeSwitch" Toggled="OnThemeSwitchToggled" HorizontalOptions="End"/>
        </Grid>
    </StackLayout>
</ContentPage>